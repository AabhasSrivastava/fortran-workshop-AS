{
    "fortran.linter.compiler": "ifx",
    "fortran.linter.includePaths": [
        "./**"
    ],
    "fortran.linter.modOutput": "./build/mod",
    "triggerTaskOnSave.tasks": {
        "Fortitude Check": [
            "*.f90",
            "!out/"
        ],
        "fprettify": [
            "*.f90",
            "!out/"
        ]
    },
    "fortran.formatting.formatter": "Disabled",
    "cmake.useCMakePresets": "always",
    "fortran.fortls.disableDiagnostics": false,
    "terminal.integrated.profiles.windows": {
        "oneAPI Command Prompt": {
            "path": "cmd.exe",
            "args": [
                "/E:ON",
                "/K",
                "C:\\Program Files (x86)\\Intel\\oneAPI\\setvars.bat",
                "intel64",
                "vs2022"
            ],
            "env": {
                "FPM_FC": "ifx"
            }
        }
    }
}
