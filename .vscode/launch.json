{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug current CMake launch target",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${command:cmake.launchTargetPath}",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${command:cmake.launchTargetDirectory}",
            "console": "integratedTerminal"
        },
        {
            "name": "Debug currently opened .exe file",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${file}",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "console": "integratedTerminal"
        }
    ]
}
